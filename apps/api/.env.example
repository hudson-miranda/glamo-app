# Application
NODE_ENV=development
PORT=3333
API_PREFIX=api
API_VERSION=v1

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/glamo_dev?schema=public"
DIRECT_URL="postgresql://postgres:postgres@localhost:5432/glamo_dev?schema=public"

# Redis (for cache and queues)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Cors
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Throttle
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Logging
LOG_LEVEL=debug
